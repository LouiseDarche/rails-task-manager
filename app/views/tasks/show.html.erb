<div class="container">
  <h2><%= @task.title %></h2>
  <button type="button"><%= link_to "Edit the task", edit_task_path %></button>
  <div><%= @task.details %></div>
  <% completed = @task.completed ? "fa-check-square" : "fa-square" %>
  <% task_completed = @task.completed ? "This task is completed" : "This task is not yet completed" %>
  <p><i class="far <%= completed %>"></i><%= task_completed %></p>
  <i class="fas fa-undo-alt"></i><%= link_to "Back to list", tasks_path %>
</div>
